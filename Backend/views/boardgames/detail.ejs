        <%- include('../partials/header_store.ejs'); -%>

        <div class="header-end"></div>
        <div class="container-section">
            <!-- Hien thi anh va gia san pham -->
            <div class="single-item">
                <div class="grid">
                    <div class="grid__row">
                        <div class="nav-status">
                            <a href="https://courses.uit.edu.vn/login/index.php" class="nav-status__page">Cửa hàng</a>
                            <div class="nav-status__page__link">::</div>
                            <a href="https://courses.uit.edu.vn/login/index.php" class="nav-status__page nav-status__page--now">Azul Mini</a>
                        </div>
                        <div class="grid__colum-1">
                            <div class="small-img">
                                <img src="<%= boardgame.image %>" alt="" class="small-img__img boder-img" onclick="swapImageClasses(this)">
