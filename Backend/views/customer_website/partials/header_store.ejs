<header class="header">
  <div class="grid">
   <div class="grid__row">
      <div class="header__container">
          <a href="/" class="header__logo">
              <img src="/assets/images/logo.jpg" alt="" class="header__logo-img">
          </a>
          <div class="header__search">
            <form action="/store" method="GET">
                <input type="text" name="name" placeholder="Nhập tên sản phẩm " class="input_search">
                <button type="submit" class="btn__search" >
                    <img src="/assets/images/header__search-icon.svg" alt="" class="header__search-icon">
                </button>
            </form>
          </div>
          <div class="header__nav">
              <div class="header__nav-page">
                  <a href="/" class="header__nav-title ">Trang Chủ
                  </a>
                  <a href="/store" class="header__nav-title nav-title__bold">Cửa Hàng
                    <div class="nav-title__active"></div>
                  </a>
                  <a href="/user/orderhistory" class="header__nav-title">Lịch Sử Thuê
                  </a>
              </div>
              <a href="/user/profile" class="header__nav-avatar">
                  <img src="<%= user.avatarUrl %>" style="width: 50px; border-radius: 50%" alt="" class="nav-avatar__customer">
              </a>
          </div>
      </div> 
   </div>
  </div>
  

</header>

