<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- link css -->
    <link rel="stylesheet" href="/css_style_login_reg/style.css">

    <!-- link icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" integrity="sha512-ZnR2wlLbSbr8/c9AgLg3jQPAattCUImNsae6NHYnS9KrIwRdcY9DxFotXhNAKIKbAXlRnujIqUWoXXwqyFOeIQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký</title>
</head>
<body>
    <div class="container active ">
        <div class="box">
            <div class="form sign_up">
                <h3>Đăng ký</h3>
                <span></span>
                <form action="/register" id="form_input" method="post" enctype="multipart/form-data">
                    <div class="type">
                        <input type="text" name="name" placeholder="Họ và tên" id="name" pattern="[a-zA-ZÀ-ỹ\s]+" title="Vui lòng chỉ nhập ký tự chữ cái và tiếng Việt có dấu">


                    </div>
                    <div class="type">

                        <input type="text" name="username" placeholder="Tên đăng nhập" id="username">
                    </div>
                    <div class="type">

                        <!-- <input type="password" name="password" placeholder="Mật khẩu" id="password"> -->
                        <input type="password" name="password" placeholder="Mật khẩu" id="password" oninput="validatePassword(this)">
                    </div>
                    <div class="type">
                        
                        <input type="email" name="email" placeholder="Email" id="email">
                    </div>
                  
                    <div class="type">

                        <!-- <input type="tel" name="tel" placeholder="Số điện thoại" id="tel"> -->
                        <input type="tel" name="tel" placeholder="Số điện thoại" id="tel" oninput="validateInput(this)">

                    </div>
                    <div class="type ">
                        <input type="text" name="identity" placeholder="CCCD" id="identity" oninput="validateInput(this)" > 
                    </div>
                    <div class="type_avatar">
                        <span id="placeholder-text">Avatar</span>
                        <!-- <input class="customer-form__input-identity-img" type="file" id="avatar" name="avatar" style="margin-right: 25px;"> -->
                        <input class="customer-form__input-identity-img" type="file" id="avatar" name="avatar" onchange="validateFile(this)">
                        <!-- <input type="file" name="avatar" id="avatar" class="file-input">
                        <button class="choose-file-btn" onclick="document.getElementById('avatar').click()">
                            Choose File
                        </button> -->
                    </div>
                    <div class="type">

                        <input type="text" name="address" placeholder="Địa chỉ" id="address">
                    </div>


                    <button class="btn bkg">Đăng ký</button>
                </form>
                <% if (flash.errorMessages && flash.errorMessages.length > 0) { %>
                    <script>
                        alert('<%= flash.errorMessages[0] %>');
                    </script>
                <% } %>
            </div>
        </div>

        <div class="overlay">
            <div class="page page_signUp">
                <h3>Hello Friend!</h3>
                <p>Cung cấp thông tin của bạn để đăng ký</p>
                <a href="/login"><button class="btn btnSign-up"><i class="bi bi-arrow-left"></i> Đăng nhập</button></a>
            </div>
        </div>
    </div>
    
    <script>
    function validatePassword(input) {
    const password = input.value;
    if (password.length < 8 || password.length > 16) {
      input.setCustomValidity("Mật khẩu phải có ít nhất 8 ký tự và nhiều nhất 16 ký tự");
    } else {
      input.setCustomValidity("");
    }
  }
    function validateInput(input) {
        input.value = input.value.replace(/\D/g, '');
    }
    function validateFile(input) {
    const allowedExtensions = /(\.png|\.jpg|\.jpeg)$/i;
    const fileName = input.value;
    if (!allowedExtensions.exec(fileName)) {
      input.value = '';
      alert('Vui lòng chỉ chọn tệp tin có định dạng .png, .jpg hoặc .jpeg');
    }
  }
    </script>

   <!-- link script
   <script src="/css_style_login_reg/main.js"></script> -->
</body>
</html>